<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".FavoriteActivity">

    <!-- Back Button -->

    <!-- Favorite Section Card -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Back Button"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/favorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/favoriteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Favorite"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/favoriteColorValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Favorite Color: Not provided"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/favoriteFoodValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Favorite Food: Not provided"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/favoriteSportValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Favorite Sport: Not provided"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/favoriteGamesValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Favorite Online Games: Not provided"
                android:textSize="16sp" />

            <!-- Edit Button for Favorite -->
            <ImageButton
                android:id="@+id/igmFav"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Edit Favorite"
                android:scaleType="centerInside"
                android:src="@drawable/ic_fav" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Hobbies Section Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/hobbies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/favorite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/hobbiesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hobbies"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/favoriteHobbyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorite Hobby: Not provided"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/booksOrMoviesValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Books or Movies: Not provided"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/sportOrGameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sport or Game: Not provided"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/drawingOrPaintingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drawing or Painting: Not provided"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/funHobbyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fun Hobby: Not provided"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <!-- Edit Button for Hobbies -->
            <ImageButton
                android:id="@+id/imgHob"
                android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_hob"
            android:contentDescription="Edit Hobbies"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Save Button -->
    <Button
        android:id="@+id/Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="#9C27B0"
        android:padding="12dp"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hobbies"
        android:layout_marginTop="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
